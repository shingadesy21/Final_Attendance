<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#B27CBB">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#9C27B0"/>
    <ImageView
        android:id="@+id/main_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/main_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/add_stud_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_below="@id/main_img"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="STUDENT INFORMATION"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/take_p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/add_stud_info"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="TAKE PRESENTY"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/check_presenty_staus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/take_p"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="PRESENTY STATUS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/check_defaulters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:layout_below="@+id/check_presenty_staus"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:text="DEFAULTERS"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ffffff"/>

</RelativeLayout>